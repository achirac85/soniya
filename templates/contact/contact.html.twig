{% extends "base.html.twig" %}
{% block title %}
	Contact
{% endblock %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{'asset/css/contact.css'}}">
{% endblock %}
{% block body %}
	<main>
		<br><br><br><br><br><br><br>
		<div id="deco">
			<div>
				<img class="contact" src="{{'asset/imageLG/CT.jpg'}}" alt="photo deco">
				<img class="table" src="{{'asset/imageLG/CV.jpg'}}" alt="deco table">
			</div>
			<div>
				<form>
					<fieldset>
						<legend>Nous contacter</legend>
						<div>
							<label for="nameinput">Votre nom</label><br>
							<input type="text" name="firstname" id="firstname" required>
						</div>
						<div>
							<label for="nameinput">Votre prénom</label><br>
							<input type="text" name="lastname" id="lastname" required>
						</div>
						<div>
							<label for="emailinput">Votre email</label><br>
							<input type="email" name="email" id="emailinput" placeholder="contact@demo.com" required>
						</div>
						<div>
							<label for="telinput">Votre numero de telephone</label><br>
							<input type="tel" name="tel" id="telinput" required>
						</div>
						<div>
							<label for="objet">Objet</label><br>
							<select name="objet" id="objet">
								<option value="">Information</option>
								<option value="">Réclamation</option>
								<option value="">Suggestion</option>
							</select>
						</div>
						<div>
							<label for="message">Votre message</label><br>
							<textarea name="message" id="message" cols="30" rows="10" placeholder="votre message"></textarea>
						</div>
						<input type="submit" value="envoyer">
						<input type="reset">
					</fieldset>
				</form>
			</div>
			<div>
				<img class="contact" src="{{'asset/imageLG/CT.jpg'}}" alt="photo deco">
				<img class="table" src="{{'asset/imageLG/CV.jpg'}}" alt="deco table">
			</div>
		</div>
	</main>
{% endblock %}
